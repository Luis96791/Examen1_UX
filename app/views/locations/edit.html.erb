<h1>Editing Location</h1>

<%= form_for :location, url: location_path(@location), method: :patch do |f| %>
	<% if @location.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@location.errors.count, "error") %>
				No se puede a√±adir una nueva localidad:
			</h2>
			<ul>
				<% @location.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	  	
  	<p>
    	<%= f.label :name %><br>
    	<%= f.text_field :name %>
  	</p>
 
  	<p>
    	<%= f.submit %>
  	</p>
<% end %>

<%= link_to 'Back', locations_path %>